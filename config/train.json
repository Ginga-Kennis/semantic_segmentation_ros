{
    "log": {
        "path": "log/training"
    },

    "dataset": {
        "path": "assets/data",
        "labels": ["circle", "square", "star", "triangle"],
        "val_split": 0.1,
        "augmentations": {
            "enabled": true,
            "flip_ud": 0.5,
            "flip_lr": 0.5,
            "brightness_multiply": [0.5, 1.5],
            "rotate": [-180, 180],
            "apply_prob": 0.5,
            "sigma": [0, 10]
        }
    },

    "arch": {
        "model": "deeplabv3plus",
        "encoder_name": "resnet34",
        "encoder_weights": "imagenet",
        "in_channels": 3,
        "classes": 5
    },

    "train": {
        "lr": 0.00005,
        "epochs": 5000
    },

    "dataloader": {
        "batch_size": 20,
        "num_workers": 8,
        "pin_memory": true
    }
}
