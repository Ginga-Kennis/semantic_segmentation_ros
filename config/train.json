{
    "log": {
        "path": "log/training"
    },

    "dataset": {
        "path": "assets/data",
        "labels": ["circle", "square", "star", "triangle"],
        "val_split": 0.1,
        "augmentations": {
            "enabled": true,
            "rotate": 180
        }
    },

    "arch": {
        "model_name": "deeplabv3plus",
        "encoder_name": "resnet34",
        "encoder_weights": "imagenet",
        "in_channels": 3,
        "classes": 5
    },

    "train": {
        "lr": 0.001,
        "epochs": 5000
    },

    "dataloader": {
        "batch_size": 20,
        "num_workers": 8,
        "pin_memory": true
    }
}
