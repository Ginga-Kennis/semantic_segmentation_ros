{
    "log": {
        "path": "log/training/"
    },

    "dataset": {
        "path": "assets/dataset",
        "labels": ["specular", "transparent", "opaque"],
        "augmentations": {
            "enable" : true,
            "affine" : {
                "enable" : true,
                "rotate" : [-180, 180],
                "translate" : [0.2, 0.2],
                "scale" : [0.5, 1.5],
                "shear" : [0.8, 1.2],
                "fill" : 255
            },
            "perspective" : {
                "enable" : true,
                "distortion_scale" : 0.5,
                "p" : 0.5 
            },
            "elastic" : {
                "enable" : true,
                "alpha" : 30,
                "sigma" : 5.0 
            }
        }
    },

    "arch": {
        "model_name": "deeplabv3plus",
        "encoder_name": "resnet50",
        "encoder_weights": "imagenet",
        "in_channels": 3,
        "classes": 4
    },

    "train": {
        "lr": 0.00001,
        "epochs": 1500
    },

    "dataloader": {
        "batch_size": 60,
        "num_workers": 8,
        "pin_memory": true
    }
}
