{
    "log": {
        "path": "log/training"
    },

    "dataset": {
        "path": "assets/data",
        "labels": ["circle", "square", "star", "triangle"],
        "val_split": 0.1,
        "augmentations": {
            "enabled" : true,
            "rotate" : [-180, 180],
            "translate" : [0.2, 0.2],
            "scale" : [0.5, 1.5],
            "shear" : [0.8, 1.2],
            "fill" : 255,
            "alpha" : 30,
            "sigma" : 5.0 
        }
    },

    "arch": {
        "model_name": "deeplabv3plus",
        "encoder_name": "resnet34",
        "encoder_weights": "imagenet",
        "in_channels": 3,
        "classes": 5
    },

    "train": {
        "lr": 0.00005,
        "epochs": 5000
    },

    "dataloader": {
        "batch_size": 20,
        "num_workers": 8,
        "pin_memory": true
    }
}
